<p style="color: green"><%= notice %></p>

<%= render @album %>

<div>
  <% if policy(@album).update? %>
    <%= link_to 'Edit', edit_album_path(@album) %>
  <% end %>

  <% if policy(@album).destroy? %>
    <%= link_to 'Delete', @album, method: :delete %>
  <% end %>

  <%= link_to "Back to albums", albums_path %>
</div>
